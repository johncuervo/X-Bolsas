<div class="container my-5">
  <div class="row justify-content-center"">
    <div class="col-md-10">
      <div class="order">
        <h1 class="mb-4"><%= form_title_order %></h1>

        <% if @order.errors.any? %>
          <div class="alert alert-danger">
            <ul>
            <% @order.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_for @order do |f| %>

          <div class="form-group">
            <%= f.label "Cliente", class:"mr-3" %>
            <%= f.collection_select :customer_id, Customer.all, :id, :name %>
          </div>

          <div>
            <%= f.submit form_title_order %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
