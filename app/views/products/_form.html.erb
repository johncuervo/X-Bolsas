<div class="container col-8 my-5">
  <div class="row justify-content-center"">
    <div class="col-md-10">
      <div class="product">
        <h1 class="mb-4"><%= form_title_product %></h1>

        <% if @product.errors.any? %>
          <div class="alert alert-danger">
            <ul>
            <% @product.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_for @product do |f| %>
          <div class="form-group">
            <%= f.text_field :width, class: "form-control input-lg", placeholder: "Ancho" %>
          </div>

          <div class="form-group">
            <%= f.text_field :height, class: "form-control input-lg", placeholder: "Alto" %>
          </div>

          <div class="form-group">
            <%= f.text_field :unit, class: "form-control input-lg", placeholder: "Valor Unidad" %>
          </div>

          <div class="form-group">
            <%= f.text_field :quantity, class: "form-control input-lg", placeholder: "Cantidad" %>
          </div>

          <div>
            <%= f.submit form_title_product %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
