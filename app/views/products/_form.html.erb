<div id="product-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= form_title_product %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <%= form_for @product, remote: true do |f| %>
        <div class="modal-body">
          <div class="alert alert-danger" role="alert" style="display: none;"></div>
          <div class="form-group">
            <%= f.text_field :width, class: "form-control input-lg", placeholder: "Ancho" %>
          </div>

          <div class="form-group">
            <%= f.text_field :height, class: "form-control input-lg", placeholder: "Alto" %>
          </div>

          <div class="form-group">
            <%= f.text_field :unit, class: "form-control input-lg", placeholder: "Valor Unidad" %>
          </div>

          <div class="form-group">
            <%= f.text_field :quantity, class: "form-control input-lg", placeholder: "Cantidad" %>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit form_title_product, class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
