<div id="customer-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= form_title_customer %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <%= form_for @customer, remote: true do |f| %>
        <div class="modal-body">

          <% if @customer.errors.any? %>
            <div class="alert alert-danger">
              <ul>
              <% @customer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          
          <div class="alert alert-danger" role="alert" style="display: none;"></div>
          <div class="form-group">
            <%= f.text_field :name, class: "form-control input-lg", placeholder: "Cliente" %>
          </div>

          <div class="form-group">
            <%= f.text_field :email, class: "form-control input-lg", placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.text_field :phone, class: "form-control input-lg", placeholder: "Tel/Cel" %>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit form_title_customer, class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
